generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "mysql"
}
model Framework {
  id          String    @id
  name        String
  description String
  modules     Module[]
  projects    Project[]
  presets     PresetFramework[]
}

model Module {
  id          String    @id
  name        String
  description String

  framework   Framework @relation(fields: [frameworkId], references: [id])
  frameworkId String

  projects    ProjectModule[]
  presets     PresetModule[]
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  framework   Framework @relation(fields: [frameworkId], references: [id])
  frameworkId String
  user       User      @relation(fields: [userId], references: [id])
  userId     String
  modules     ProjectModule[]
}

model ProjectModule {
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  
  module    Module  @relation(fields: [moduleId], references: [id])
  moduleId  String

  @@id([projectId, moduleId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  projects      Project[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Preset {
  id          String    @id @default(cuid())
  name        String
  description String?
  image       String?
  frameworks  PresetFramework[]
  modules     PresetModule[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model PresetFramework {
  preset      Preset    @relation(fields: [presetId], references: [id], onDelete: Cascade)
  presetId    String

  framework   Framework @relation(fields: [frameworkId], references: [id])
  frameworkId String

  @@id([presetId, frameworkId])
}

model PresetModule {
  preset    Preset @relation(fields: [presetId], references: [id], onDelete: Cascade)
  presetId  String

  module    Module @relation(fields: [moduleId], references: [id])
  moduleId  String

  @@id([presetId, moduleId])
}
